---
import BaseLayout from '../layouts/BaseLayout.astro';
import HorizontalCard from '../components/HorizontalCard.astro';

import ronShop from '../images/RonShop.png';
import youtubeDownloader from '../images/youtube-downloader.png';

export type Project = {
	title: string;
	img: ImageMetadata | string;
	desc: string | string[];
	url?: string;
	badge?: string;
};

export const projects: Project[] = [
	{
		title: 'RonShop',
		img: ronShop,
		desc: 'A fullstack e-commerce project built with the MEAN stack. A final year project, and my first fullstack one.',
		url: 'https://github.com/RonStrauss/shop-project',
		// badge: 'NEW'
	},
	{
		title: 'MP3 Youtube Downloader',
		img: youtubeDownloader,
		desc: 'A simple web app using Vite,React, and Node, to download and keep track of mp3s from youtube videos',
		url: 'https://github.com/RonStrauss/download-yt-react-vite-ts-node',
	},
];
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
	<div>
		<div class="mb-4 text-6xl w-full font-bold antialiased underline hover:subpixel-antialiased">Projects</div>
	</div>

	{
		projects.map((project) => (
			<>
				<HorizontalCard title={project.title} img={project.img} desc={project.desc} url={project.url} badge={project.badge || null} />
				<div class="divider my-0" />
			</>
		))
	}
</BaseLayout>
